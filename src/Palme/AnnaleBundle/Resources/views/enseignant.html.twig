{{ include("PalmeAnnaleBundle::header.html.twig") }}

<h3><ul class="nav nav-tabs">
        <li role="presentation" ><a href="{{ path('palme_annale_homepage') }}">Acceuil</a></li>
        <li role="presentation" class="active"><a href="{{ path('palme_annale_enseignant') }}">Enseignant</a></li>
        <li role="presentation"><a href="#">Etudiant</a></li>
    </ul>
</h3>

<div class="container">

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {{ form_errors(form) }}

    <fieldset>
        <div class="form-group">
            {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            <div class="col-sm-4">
                {{ form_widget(form.nom, {'attr': {'class': 'form-control col-sm-9'}}) }}
            </div>
            {{ form_errors(form.nom) }}
        </div>
        <div class="form-group">
            {{ form_label(form.prenom, 'Prenom', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            <div class="col-sm-4">
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control col-sm-9'}}) }}
            </div>
            {{ form_errors(form.prenom) }}
        </div>
        <div class="form-group">
            {{ form_label(form.mail, 'Adresse Email', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            <div class="col-sm-4">
                {{ form_widget(form.mail, {'attr': {'class': 'form-control col-sm-9'}}) }}
            </div>
            {{ form_errors(form.mail) }}
        </div>

        <div class="form-group">
            <div class="col-sm-4">
            <label for="annaleFile">Fichier de l'annale</label>
            <input type="file" id="annaleFile">
            <p class="help-block">Sélectionnez le fichier et indiquez la matière.</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label" for="singlebutton"></label>
            <div class=col-sm-6">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}
            </div>
        </div>
    </fieldset>







</div>
